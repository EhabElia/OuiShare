  div.row
    div.large-2.columns
      ul
        li
          a href="#{about_path}" About OuiShare
        li
          a href="#" Press Room
        li
          a href="#" Work with us
    div.large-2.columns
      ul
        li
          a href="#{contact_path}" Contact
        li
