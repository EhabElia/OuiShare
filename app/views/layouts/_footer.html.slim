#f
  .container
    .row
      .col-lg-10.col-lg-offset-1
        .col-lg-4
          h5 Subscribe to our newsletter            
          = form_tag newsletter_subscribe_path, :class => "form-inline" do
            .row
              .col-lg-12.text-field-newsletter
                = text_field_tag :email_address, '', :class => "form-control-footer", :placeholder => "MAIL"
                = submit_tag "OK", :class => "btn-footer submit-newsletter", :style => 'border-radius: 0px;'
        .col-lg-4.infos
          = link_to about_mission_path do
            h6 About
          = link_to workus_path do
            h6 = t('footer.workus')
          = link_to contact_path do
            h6 = t('footer.contact')
          h6 OUISHARE logo kit
          = link_to faq_path do
            h6 = t('footer.faqs')
          
        .col-lg-4.follow
          h5 Follow OuiShare
          a href="https://www.facebook.com/OuiShare" target="_blank"
            h6 FACEBOOK
          a href="https://twitter.com/OuiShareFest" target="_blank"
            h6 TWITTER
          a href="https://www.flickr.com/photos/ouishare" target="_blank"
            h6 FLICKR
          a href="https://plus.google.com/+OuishareNet" target="_blank"
            h6 GOOGLE+
    br
    br
    .row
      .col-lg-12.text-center
        p
          = "open source code by "
          = link_to "http://engage.is", :target => "_blank" do
            = "Engage"
          = " & "
          = link_to "http://www.pitch-me.fr", :target => "_blank" do
