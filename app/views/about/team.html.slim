- content_for :page_title, 'Team'
div#page-team
  section.theTeam
    div.row
      div.large-4.columns
        h3
          = @team_page.title
        p = @team_page.text

        a.btn.blue href="#{contact_path}" = @team_page.link_text

      div.large-8.columns
        ul.large-block-grid-5
          - @users.each do |a|
            li
              p.name = a.name
              div.avatar
                = image_tag(a.avatar_url(50))
