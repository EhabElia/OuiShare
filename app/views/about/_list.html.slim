section#list
  - @list.each do |l|
    .activities
      .container
        .row
          - unless params[:action] == 'mission'
            = link_to l.link do
              .col-lg-6.col-lg-offset-3.col-sm-12
                h4 = l.name
                = image_tag(l.image.list_thumb.url)
                .markdown = l.text_html
                
          - else
            .col-lg-6.col-lg-offset-3.col-sm-12
                h4 = l.name
                = image_tag(l.image.list_thumb.url)
                .markdown = l.text_html
              
