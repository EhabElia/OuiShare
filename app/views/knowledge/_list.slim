section#list
/  - @current_language.research.visible.order('created_at desc').each do |p|
    .event
      div.row
        / a href="#{research_path(p)}"
          div.large-5.columns
            h3.subtitle.white = p.name
            p = p.resume
            div.tags
              - p.tags.each do |t|
                span.label.white = t.name

        div.large-7.columns
          div.thumb
            = link_to p
              = image_tag p.image.list_thumb.url
