      div.row
        div.large-12.columns
          div.banner
            = image_tag(@knowledge_page.image.top_internal)

  section#list
    div.activities
      div.row
        div.large-12.columns
          ul.large-block-grid-2
            li
              h4 = @knowledge_page.title1
