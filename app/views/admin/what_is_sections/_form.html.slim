= simple_form_for  [:admin, @what_is_section.language, @what_is_section] do |f|
  h4
    | Language |
    = @what_is_section.language.name

  div.large-3.columns
    = f.input :title
    = f.input :title1
    = f.input :image1, as: :image_preview, input_html: {preview_version: :thumb}
  div.large-3.columns
    = f.input :text1
    = f.input :title2
    = f.input :image2, as: :image_preview, input_html: {preview_version: :thumb}
  div.large-3.columns
    = f.input :text2
    = f.input :title3
    = f.input :image3, as: :image_preview, input_html: {preview_version: :thumb}
  div.large-3.columns
    = f.input :text3
    = f.input :title4
    = f.input :image4, as: :image_preview, input_html: {preview_version: :thumb}
  = f.input :text4
  = f.submit
